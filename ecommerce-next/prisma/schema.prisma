datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


generator client {
  provider = "prisma-client-js"
}



model User {
  id        Int       @id @default(autoincrement()) @map("id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  name     String    @map("name")
  email    String    @unique @map("email")
  password String    @map("password")
  role     String    @default("CUSTOMER") @map("role")

  products  Product[]  @relation("SellerProducts")
  cartItems CartItem[]
  orders    Order[]
  CustomerAddress CustomerAddress[]

  @@map("users")
}

model Product {
  id           Int        @id @default(autoincrement()) @map("id")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  title        String     @map("title")
  description  String     @map("description")
  details      String?    @map("details")
  price        Float      @map("price")
  hsn          String?    @map("hsn")   // ✅ ✅ ✅ ADDED FIX

  discount     Float?     @default(0) @map("discount")
  brand        String?    @map("brand")
  gender       String     @default("UNISEX") @map("gender")
  material     String?    @map("material")
  fabricCare   String?    @map("fabric_care")
  occasion     String?    @map("occasion")
  modelNumber  String?    @map("model_number")
  sku          String?    @unique @map("sku") 

  availableSizes String @map("available_sizes")
  sizeStock      String @map("size_stock")
  colors         String @map("colors")

  imageUrls     String    @map("image_urls")

  weight        Float?    @map("weight")
  dimensions    String?   @map("dimensions")

  returnPolicy  String?   @map("return_policy")
  sellerNotes   String?   @map("seller_notes")

  seller        User       @relation("SellerProducts", fields: [sellerId], references: [id])
  sellerId      Int        @map("seller_id")

  category      Category   @relation(fields: [categoryId], references: [id])
  categoryId    Int        @map("category_id")

  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id])
  subcategoryId Int         @map("subcategory_id")

  cartItems     CartItem[]
  orderItems    OrderItem[]

  @@map("products")
}



model CartItem {
  id        Int      @id @default(autoincrement()) @map("id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @map("user_id")

  product   Product  @relation(fields: [productId], references: [id])
  productId Int      @map("product_id")

  quantity  Int      @default(1) @map("quantity")

  @@map("cart_items")
}

model Order {
  id        Int      @id @default(autoincrement()) @map("id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @map("user_id")
  
  address     CustomerAddress @relation(fields: [addressId], references: [id])
  addressId  Int @map("address_id")

  items     OrderItem[]
  total     Float    @map("total")
  status    String @default("PENDING") @map("status")

  @@map("orders")
}

model OrderItem {
  id        Int      @id @default(autoincrement()) @map("id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int      @map("order_id")

  product   Product  @relation(fields: [productId], references: [id])
  productId Int      @map("product_id")

  price     Float    @map("price")
  quantity  Int      @map("quantity")

  @@map("order_items")
}

model Category {
  id            Int           @id @default(autoincrement()) @map("id")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  name          String        @map("name")
  description   String        @map("description")
  subcategories Subcategory[]
  products      Product[]
  @@map("categories")
}

model Subcategory {
  id           Int          @id @default(autoincrement()) @map("id")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  name         String       @map("name")
  description  String       @map("description")
  category     Category     @relation(fields: [categoryId], references: [id])
  categoryId   Int          @map("category_id")
  products     Product[]
  @@map("subcategories")
}

model CustomerAddress {
  id        Int     @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId  Int @map("user_id")
  address   String @map("address")
  city      String @map("city")
  state     String @map("state")
  country   String @map("country")
  zipcode   String @map("zipcode")
  

  customer    User      @relation(fields: [userId], references: [id])
  orders    Order[]
  @@map("customer_addresses") 
}
